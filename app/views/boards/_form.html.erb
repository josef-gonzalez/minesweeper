<%= simple_form_for(@board) do |f| %>
    <div class="row py-3">
        <div class="col-12"><label>Name:</label></div>
        <div class="col-12"><%= f.text_field :name, class: "form-control", autofocus: true, required: true %></div>
    </div>
    <div class="row py-3">
        <div class="col-12"><label>Email:</label></div>
        <div class="col-12"><%= f.text_field :email, class: "form-control", autofocus: true, required: true %></div>
    </div>
    <div class="row py-3">
        <div class="col-12"><label>Width:</label></div>
        <div class="col-12"><%= f.text_field :width, class: "form-control", autofocus: true, required: true %></div>
    </div>
    <div class="row py-3">
        <div class="col-12"><label>Height</label></div>
        <div class="col-12"><%= f.text_field :height, class: "form-control", autofocus: true, required: true %></div>
    </div>
    <div class="row py-3">
        <div class="col-12"><label>Number of mines</label></div>
        <div class="col-12"><%= f.text_field :mines, class: "form-control", autofocus: true, required: true %></div>
    </div>
    <div class="text-end">
        <%= f.button :submit , class: 'btn btn-primary', value: 'Generate Board'%>
    </div>
<% end %>